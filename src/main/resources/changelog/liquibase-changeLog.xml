<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
    
    <changeSet author="rentius" id="createSequence-authority">
        <createSequence 
            incrementBy="1"
            sequenceName="authority_seq"
            startValue="1"/>
    </changeSet>    
    <changeSet author="rentius" id="create table authority">
        <createTable tableName="authority">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <addDefaultValue columnName="id"
                         defaultValueSequenceNext="authority_seq"
                         tableName="authority"/>                
    </changeSet>    
    <changeSet author="rentius" id="createSequence-property">
        <createSequence 
            incrementBy="1"
            sequenceName="property_seq"
            startValue="1"/>
    </changeSet> 
    <changeSet author="rentius" id="create table property">
        <createTable tableName="property">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <addDefaultValue columnName="id"
                         defaultValueSequenceNext="property_seq"
                         tableName="property"/>                
    </changeSet>         
    <changeSet author="rentius" id="create table app_role">
        <createSequence 
            incrementBy="1"
            sequenceName="app_role_seq"
            startValue="1"/> 
              
        <createTable tableName="app_role">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <addDefaultValue columnName="id"
                         defaultValueSequenceNext="app_role_seq"
                         tableName="app_role"/>                
    </changeSet>         
    <changeSet author="rentius" id="create table app_user">
        <createSequence 
            incrementBy="1"
            sequenceName="app_user_seq"
            startValue="1"/> 
              
        <createTable tableName="app_user">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="firstname" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="lastname" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(60)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="role_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <addDefaultValue columnName="id"
                         defaultValueSequenceNext="app_user_seq"
                         tableName="app_user"/>   
        
        <addForeignKeyConstraint baseTableName="app_user"
                                 baseColumnNames="role_id"
                                 constraintName="app_user_role_id"
                                 referencedTableName="app_role"
                                 referencedColumnNames="id"/>             
    </changeSet>   
    <changeSet author="rentius" id="insert app_role ADMIN">
        <insert tableName="app_role">
            <column name="name" value="ADMIN"/>
        </insert>               
    </changeSet>           
    <changeSet author="rentius" id="insert app_user administrator">
        <insert tableName="app_user">
            <column name="firstname" value="Admin"/>
            <column name="lastname" value="Admin"/>
            <column name="email" value="admin@jqfitness.co.uk"/>
            <column name="password" value="$2a$10$jT4b87gcQVgjv5iEfz5B2.83EmuvTatTNAYz1KMCzuqa9UcHiQxmi"/>
            <column name="role_id" valueComputed="(select id from app_role where name = 'ADMIN')"/>
        </insert>               
    </changeSet> 
    <changeSet author="rentius" id="create table category_type">
        <createSequence 
            incrementBy="1"
            sequenceName="category_type_seq"
            startValue="1"/> 
              
        <createTable tableName="category_type">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <addDefaultValue columnName="id"
                         defaultValueSequenceNext="category_type_seq"
                         tableName="category_type"/> 
    </changeSet>
    
    <changeSet author="rentius" id="create table category">
        <createSequence 
            incrementBy="1"
            sequenceName="category_seq"
            startValue="1"/> 
              
        <createTable tableName="category">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="parent_id" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="category_type_id" type="bigint">
                <constraints nullable="true"/>
            </column>
        </createTable>
        
        <addDefaultValue columnName="id"
                         defaultValueSequenceNext="category_seq"
                         tableName="category"/>   
        
        <addForeignKeyConstraint baseTableName="category"
                                 baseColumnNames="parent_id"
                                 constraintName="category_parent_id"
                                 referencedTableName="category"
                                 referencedColumnNames="id"/>             
        <addForeignKeyConstraint baseTableName="category"
                                 baseColumnNames="category_type_id"
                                 constraintName="category_category_type_id"
                                 referencedTableName="category_type"
                                 referencedColumnNames="id"/>             
    </changeSet>  
    
    <changeSet author="rentius" id="insert category nutrition">
        <insert tableName="category">
            <column name="name" value="Nutrition"/>
        </insert>               
    </changeSet>     
    
    <changeSet author="rentius" id="insert category nutrition sub category items">
        <insert tableName="category">
            <column name="name" value="Breakfast"/>
            <column name="parent_id" valueComputed="(select id from category where name = 'Nutrition')"/>
        </insert>               
        <insert tableName="category">
            <column name="name" value="Lunch"/>
            <column name="parent_id" valueComputed="(select id from category where name = 'Nutrition')"/>
        </insert>               
        <insert tableName="category">
            <column name="name" value="Dinner"/>
            <column name="parent_id" valueComputed="(select id from category where name = 'Nutrition')"/>
        </insert>               
        <insert tableName="category">
            <column name="name" value="Snacks"/>
            <column name="parent_id" valueComputed="(select id from category where name = 'Nutrition')"/>
        </insert>               
        <insert tableName="category">
            <column name="name" value="Mid Morning"/>
            <column name="parent_id" valueComputed="(select id from category where name = 'Snacks')"/>
        </insert>               
        <insert tableName="category">
            <column name="name" value="Mid Afternoon"/>
            <column name="parent_id" valueComputed="(select id from category where name = 'Snacks')"/>
        </insert>               
    </changeSet>     
    
    <changeSet author="rentius" id="create table option">
        <createSequence 
            incrementBy="1"
            sequenceName="option_seq"
            startValue="1"/> 
              
        <createTable tableName="option">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="content" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="category_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <addDefaultValue columnName="id"
                         defaultValueSequenceNext="option_seq"
                         tableName="option"/>   
        
        <addForeignKeyConstraint baseTableName="option"
                                 baseColumnNames="category_id"
                                 constraintName="option_category_id"
                                 referencedTableName="category"
                                 referencedColumnNames="id"/>             
    </changeSet>                    
</databaseChangeLog>